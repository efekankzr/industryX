@model List<IndustryX.Domain.Entities.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="my-4">
    <h2 class="text-primary"><i class="fas fa-box"></i> My Orders</h2>
    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no past orders.</div>
    }
    else
    {
        foreach (var order in Model)
        {
            <div class="border rounded p-3 mb-4 bg-light">
                <h5 class="mb-2">Order #@order.Id</h5>
                <p class="mb-2 text-muted">Date: @order.CreatedAt.ToString("dd MMM yyyy HH:mm")</p>

                <table class="table table-sm table-bordered text-center">
                    <thead class="table-secondary">
                        <tr>
                            <th>Product</th>
                            <th>Unit Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in order.OrderItems)
                        {
                            <tr>
                                <td>@item.SalesProduct.Name</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@item.Quantity</td>
                                <td>@(item.Quantity * item.UnitPrice).ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <p class="fw-bold text-end me-2">Total: @order.TotalPrice.ToString("C")</p>
            </div>
        }
    }
</div>
