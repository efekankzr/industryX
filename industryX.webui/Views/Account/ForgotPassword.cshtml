@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="my-4 p-4 bg-light shadow-sm rounded" style="max-width: 500px; margin: 0 auto;">
    <h2 class="text-center text-warning mb-4">
        <i class="fas fa-unlock-alt"></i> Forgot Password
    </h2>
    <hr />

    <form asp-action="ForgotPassword" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Enter your email address</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-warning w-100">
            <i class="fas fa-paper-plane me-1"></i> Send Reset Link
        </button>
    </form>
</div>
