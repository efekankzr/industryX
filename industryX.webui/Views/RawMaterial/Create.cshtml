@model IndustryX.Domain.Entities.RawMaterial

@{
    ViewData["Title"] = "Create Raw Material";
}

<div class="my-4 p-4 bg-light shadow-sm rounded">
    <h2 class="text-primary text-center mb-3">
        <i class="fas fa-cubes"></i> Create Raw Material
    </h2>
    <hr />

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Barcode" class="form-label">Barcode</label>
            <div class="input-group">
                <input asp-for="Barcode" class="form-control" id="Barcode" />
                <button type="button" class="btn btn-info" onclick="generateRawMaterialBarcode()">
                    <i class="fas fa-random me-1"></i> Generate
                </button>
            </div>
            <span asp-validation-for="Barcode" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter raw material name" />
            <span asp-validation-for="Name" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Unit Price</label>
            <input asp-for="Price" class="form-control" placeholder="e.g., 100.00" />
            <span asp-validation-for="Price" class="text-danger small"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-1"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="~/js/barcodeGenerator.js"></script>
    <script>
        function generateRawMaterialBarcode() {
            generateBarcode("RM", "Barcode");
        }
    </script>
}
