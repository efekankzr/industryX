@model IEnumerable<IndustryX.WebUI.ViewModels.UserListViewModel>
@{
    ViewData["Title"] = "Customer Management";
}

<div class="my-4 p-4 bg-light shadow-sm rounded">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary mb-0">
            <i class="fas fa-user-friends me-1"></i> Customer List
        </h2>
    </div>

    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No customers found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-bordered align-middle text-center">
                <thead class="table-primary">
                    <tr>
                        <th style="min-width: 200px;">Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th style="width: 140px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@user.Fullname</td>
                            <td class="text-muted">@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
