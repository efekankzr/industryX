@model List<IndustryX.WebUI.ViewModels.ProductCardViewModel>

@{
    ViewData["Title"] = "Shop";
}

<div class="my-4">
    <h2 class="text-center text-primary mb-4">
        <i class="fas fa-store"></i> Our Products
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No products available for sale at the moment.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var productCard in Model)
            {
                <div class="col">
                    @await Component.InvokeAsync("ProductCard", productCard)
                </div>
            }
        </div>
    }
</div>
