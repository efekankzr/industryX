@{
    ViewData["Title"] = "Scan Product Transfer";
}

<div class="my-4 p-4 bg-light shadow-sm rounded">
    <h2 class="text-primary text-center mb-3">
        <i class="fas fa-barcode"></i> Scan Transfer Barcode
    </h2>
    <hr />

    <form asp-action="ScanTransfer" method="post" class="d-flex flex-column gap-3">
        <label for="barcode" class="form-label">Enter Transfer Barcode</label>
        <input type="text" name="barcode" class="form-control" placeholder="e.g. TR-1A2B3C4D" autofocus required />

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search me-1"></i> Continue
            </button>
        </div>
    </form>
</div>
