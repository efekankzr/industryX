@{
    ViewData["Title"] = "Complete Product Transfer";
}

<div class="my-4 p-4 bg-light shadow-sm rounded">
    <h2 class="text-primary text-center mb-3">
        <i class="fas fa-check-circle"></i> Complete Product Transfer
    </h2>
    <hr />

    <form asp-action="CompleteTransfer" method="post">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="barcode" class="form-label">Transfer Barcode</label>
                <input type="text" class="form-control" id="barcode" name="barcode" required placeholder="Enter transfer barcode" />
            </div>

            <div class="col-md-6">
                <label for="receivedBoxCount" class="form-label">Received Box Count</label>
                <input type="number" class="form-control" id="receivedBoxCount" name="receivedBoxCount" min="1" required placeholder="Enter received box count" />
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Back to List
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check me-1"></i> Complete Transfer
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
