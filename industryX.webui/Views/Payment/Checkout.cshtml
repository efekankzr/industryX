@{
    ViewData["Title"] = "Payment Checkout";
}

<div class="my-4 p-4 bg-light shadow-sm rounded">
    <h2 class="text-primary text-center mb-4">
        <i class="fas fa-credit-card"></i> Secure Payment
    </h2>
    <hr />

    <div class="text-center">
        <p class="text-muted mb-3">You will be redirected to the payment page. Please do not close this tab.</p>
    </div>

    <div id="iyzico-checkout" class="text-center">
        @Html.Raw(ViewBag.CheckoutForm)
    </div>

    <div class="text-center mt-4">
        <a href="/" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Homepage
        </a>
    </div>
</div>
