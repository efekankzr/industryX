@{
    ViewData["Title"] = "Payment Failed";
}

<div class="my-5 p-4 bg-light shadow-sm rounded text-center">
    <i class="fas fa-times-circle fa-4x text-danger mb-3"></i>

    <h2 class="text-danger mb-3">Payment Failed</h2>
    <p class="text-muted mb-4">Unfortunately, your payment could not be completed. Please try again or contact support if the issue persists.</p>

    <div class="d-flex justify-content-center gap-3">
        <a href="/cart" class="btn btn-outline-warning">
            <i class="fas fa-shopping-cart me-1"></i> Return to Cart
        </a>
        <a href="/" class="btn btn-outline-secondary">
            <i class="fas fa-home me-1"></i> Go to Homepage
        </a>
    </div>
</div>
