@model ApplicationUser
@{
    var categories = ViewData["Categories"] as List<Category> ?? new();
}

<!-- Top Navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom py-2">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">IndustryX</a>

        <!-- Toggle for Mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="topNavbar">
            <!-- Search -->
            <form class="mx-auto w-50 d-none d-md-flex" method="get" asp-controller="Shop" asp-action="Search">
                <div class="input-group">
                    <input name="q" type="text" class="form-control" placeholder="Search for products..." />
                    <button class="btn btn-outline-secondary" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>

            <!-- Right Side -->
            <ul class="navbar-nav ms-auto d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item me-3">
                        <a class="nav-link" asp-controller="Shop" asp-action="Wishlist">
                            <i class="far fa-heart"></i> Favorites
                        </a>
                    </li>
                    <li class="nav-item me-3">
                        <a class="nav-link" asp-controller="Shop" asp-action="Cart">
                            <i class="fas fa-shopping-cart"></i> Cart
                        </a>
                    </li>
                    <li class="nav-item dropdown me-3">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> @Model?.Firstname @Model?.Surname
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="Shop" asp-action="MyOrders">Orders</a></li>
                            <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index">Profile</a></li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="dropdown-item p-0">
                                    <button type="submit" class="btn btn-link dropdown-item text-start">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item me-3"><a class="nav-link" asp-controller="Account" asp-action="Login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Register</a></li>
                }
            </ul>
        </div>
    </div>
</nav>

<!-- Sub Navigation -->
<nav class="bg-light border-bottom py-2">
    <div class="container d-flex flex-wrap gap-3 align-items-center">
        <!-- All Categories Dropdown -->
        <div class="dropdown">
            <a class="text-dark fw-semibold text-decoration-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-bars me-1"></i> All Categories
            </a>
            <ul class="dropdown-menu">
                @await Component.InvokeAsync("CategoryMenu")
            </ul>
        </div>

        <!-- Static Links -->
        <a class="text-muted text-decoration-none" href="#">Best Sellers</a>
        <a class="text-muted text-decoration-none" href="#">Flash Deals</a>
    </div>
</nav>
