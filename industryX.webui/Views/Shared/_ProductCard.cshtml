@model IndustryX.WebUI.ViewModels.SalesProductListItemViewModel

<div class="card h-100 shadow-sm">
    <a asp-controller="Shop" asp-action="Details" asp-route-url="@Model.Url">
        <img src="@Model.ImagePath"
             class="card-img-top"
             alt="@Model.Name"
             style="height: 200px; object-fit: cover;" />
    </a>

    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text text-muted">@Model.Price.ToString("C")</p>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <form asp-controller="Shop" asp-action="AddToCart" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-sm btn-success">
                <i class="fas fa-cart-plus"></i> Add to Cart
            </button>
        </form>

        <form asp-controller="Shop" asp-action="AddToWishlist" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-sm btn-outline-danger">
                <i class="fas fa-heart"></i>
            </button>
        </form>
    </div>
</div>
