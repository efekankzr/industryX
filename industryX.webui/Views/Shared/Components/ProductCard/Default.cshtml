@model IndustryX.WebUI.ViewModels.ProductCardViewModel

<div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden">
    <a asp-controller="Shop" asp-action="Details" asp-route-url="@Model.Product.Url" class="text-decoration-none">
        <div class="position-relative" style="height: 250px; background-color: #f8f9fa;">
            <img src="@Model.Product.ImagePath"
                 class="card-img-top position-absolute top-50 start-50 translate-middle"
                 alt="@Model.Product.Name"
                 style="max-height: 100%; max-width: 100%; object-fit: contain;" />
        </div>
    </a>

    <div class="card-body text-center">
        <h6 class="card-title text-dark fw-semibold">@Model.Product.Name</h6>
        <p class="card-text text-primary fw-bold mb-2">@Model.Product.Price.ToString("C")</p>
    </div>

    <div class="card-footer bg-white border-top-0 d-flex justify-content-around p-2">
        <form asp-controller="Shop" asp-action="AddToCart" asp-route-id="@Model.Product.Id" method="post" class="me-1">
            <button type="submit" class="btn btn-sm btn-success w-100">
                <i class="fas fa-cart-plus me-1"></i> Add
            </button>
        </form>

        <form asp-controller="Shop" asp-action="AddToWishlist" asp-route-id="@Model.Product.Id" method="post" class="ms-1">
            <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                <i class="fas fa-heart"></i>
            </button>
        </form>
    </div>
</div>
