@model IndustryX.WebUI.ViewModels.ProductCardViewModel

<div class="card shadow border-0 rounded-4 overflow-hidden h-100">
    <a asp-controller="Shop" asp-action="Details" asp-route-url="@Model.Product.Url" class="text-decoration-none">
        <div class="ratio ratio-4x3 bg-light">
            <img src="@Model.Product.ImagePath"
                 alt="@Model.Product.Name"
                 class="img-fluid w-100 h-100"
                 style="object-fit: contain;" />
        </div>
    </a>

    <div class="card-body text-center py-2">
        <h6 class="fw-semibold text-dark text-truncate mb-1" title="@Model.Product.Name">
            @Model.Product.Name
        </h6>
        <p class="fw-bold text-primary mb-0">
            @Model.Product.Price.ToString("C")
        </p>
    </div>

    <div class="card-footer bg-white border-top-0 d-flex gap-2 p-2 pt-0">
        <form asp-controller="Shop" asp-action="AddToCart" asp-route-id="@Model.Product.Id" method="post" class="flex-fill">
            <button type="submit" class="btn btn-success w-100">
                <i class="fas fa-cart-plus me-1"></i> Add
            </button>
        </form>

        <form asp-controller="Shop" asp-action="AddToWishlist" asp-route-id="@Model.Product.Id" method="post" class="flex-fill">
            <button type="submit" class="btn btn-outline-danger w-100">
                <i class="fas fa-heart"></i>
            </button>
        </form>
    </div>
</div>
