@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var user = SignInManager.IsSignedIn(User) ? await UserManager.GetUserAsync(User) : null;
    var roles = user != null ? await UserManager.GetRolesAsync(user) : new List<string>();
    bool isAdminPanelUser = roles.Any(r =>
        r == "Admin" || r == "WarehouseManager" || r == "Driver" || r == "SalesManager" || r == "ProductionManager");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IndustryX</title>

    <script src="https://kit.fontawesome.com/3702fdc5dc.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .admin-wrapper {
            display: flex;
        }

        .admin-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: #343a40;
            z-index: 1030;
        }

        .admin-content {
            margin-left: 250px;
            width: calc(100% - 250px);
            padding: 2rem;
            overflow-y: auto;
            min-height: 100vh;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body class="bg-light">
    @if (isAdminPanelUser)
    {
        <div class="admin-wrapper d-none d-md-flex">
            <div class="admin-sidebar">
                @await Html.PartialAsync("_AdminNavbar", user, new ViewDataDictionary(ViewData))
            </div>
            <div class="admin-content">
                <main role="main">
                    @RenderBody()
                </main>
                @await Html.PartialAsync("_AlertPartial")
            </div>
        </div>
    }
    else
    {
        @await Html.PartialAsync("_SalesNavbar", user)

        <div class="container mt-4">
            <main role="main">
                @RenderBody()
            </main>
            @await Html.PartialAsync("_AlertPartial")
        </div>
    }

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/datatables.net/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables.net-bs5/js/dataTables.bootstrap5.js"></script>

    <script src="~/js/barcodeGenerator.js" asp-append-version="true"></script>
    <script src="~/js/barcodePdf.js" asp-append-version="true"></script>
    <script src="~/js/exportExcel.js" asp-append-version="true"></script>
    <script src="~/js/urlGenerator.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
