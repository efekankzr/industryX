@model IEnumerable<IndustryX.Domain.Entities.Category>
@{
    ViewData["Title"] = "Category Management";
}

<div class="my-4 p-4 bg-light shadow-sm rounded">
    <h2 class="text-primary text-center mb-3">
        <i class="fas fa-tags"></i> Category Management
    </h2>
    <hr />

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted mb-0">Manage all product categories here.</p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus-circle me-1"></i> Add New Category
        </a>
    </div>

    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Url</th>
                <th style="width: 160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Url</td>
                    <td>
                        <div class="d-flex justify-content-center gap-1">
                            <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@c.Id" method="post" onsubmit="return confirm('Delete this category?')">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
