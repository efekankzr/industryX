@model IndustryX.WebUI.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Create Category";
}

<div class="my-4 p-4 bg-light shadow-sm rounded">
    <h2 class="text-primary text-center mb-3">
        <i class="fas fa-tag"></i> Create Category
    </h2>
    <hr />

    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" id="CategoryName" oninput="generateUrlFromName('CategoryName', 'Url')" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Url" class="form-label">URL</label>
                    <input asp-for="Url" class="form-control" id="Url" />
                    <span asp-validation-for="Url" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Save
                    </button>
                    <a asp-action="List" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
